<?xml version="1.0" encoding="UTF-8"?>
<components>
    <component-type name="base" display-name="基础组件">
        <item>
            <name>开始</name>
            <type>flow-start</type>
            <icon>/icons/start.svg</icon>
        </item>
        <item>
            <name>空操作</name>
            <type>flow-kong</type>
            <icon>/icons/kong.svg</icon>
        </item>
       <item>
            <name>结束</name>
            <type>flow-end</type>
            <icon>/icons/end.svg</icon>
        </item>
        <item>
            <name>异常</name>
            <type>flow-exception</type>
            <icon>/icons/exception.svg</icon>
        </item>
    </component-type>
    <component-type name="business" display-name="简单组件">
        <item>
            <name>输出</name>
            <type>flow-print</type>
            <icon>/icons/print.svg</icon>
            <isBeanEdit>false</isBeanEdit>
            <beanRef>flow-logUtil</beanRef>
            <method>cc.xiaonuo.flow.method.LogUtils#exec</method>
        </item>
        <item>
            <name>赋值</name>
            <type>flow-assign</type>
            <icon>/icons/assign.svg</icon>
            <isBeanEdit>false</isBeanEdit>
            <beanRef>flow-assignUtil</beanRef>
            <method>cc.xiaonuo.flow.method.AssignUtils#exec</method>
        </item>
        <item>
            <name>基础类型转换</name>
            <type>flow-type2type</type>
            <icon>/icons/type2type.svg</icon>
            <isBeanEdit>false</isBeanEdit>
            <beanRef>flow-type2typeUtil</beanRef>
            <method>cc.xiaonuo.flow.method.Type2typeUtils#exec</method>
        </item>
    </component-type>
    <component-type name="tools" display-name="工具组件">
        <item>
            <name>获取系统配置</name>
            <type>flow-sys_config</type>
            <icon>/icons/sys_config.svg</icon>
            <isBeanEdit>false</isBeanEdit>
            <beanRef>flow-sysConfigUtil</beanRef>
            <method>cc.xiaonuo.flow.method.SysConfigUtils#exec</method>
        </item>
        <item>
            <name>日期工具</name>
            <type>flow-date</type>
            <icon>/icons/date.svg</icon>
            <isBeanEdit>false</isBeanEdit>
            <beanRef>flow-dateUtil</beanRef>
            <method>cc.xiaonuo.flow.method.DateUtils#exec</method>
        </item>
        <item>
            <name>数字工具</name>
            <type>flow-number</type>
            <icon>/icons/number.svg</icon>
            <isBeanEdit>false</isBeanEdit>
            <beanRef>flow-numberUtil</beanRef>
            <method>cc.xiaonuo.flow.method.NumberlUtils#exec</method>
        </item>
        <item>
            <name>随机工具</name>
            <type>flow-random</type>
            <icon>/icons/random.svg</icon>
            <isBeanEdit>false</isBeanEdit>
            <beanRef>flow-randomUtil</beanRef>
            <method>cc.xiaonuo.flow.method.RandomlUtils#exec</method>
        </item>
        <item>
            <name>唯一ID工具</name>
            <type>flow-uniqueId</type>
            <icon>/icons/uniqueId.svg</icon>
            <isBeanEdit>false</isBeanEdit>
            <beanRef>flow-uniqueUtil</beanRef>
            <method>cc.xiaonuo.flow.method.UniqueUtils#exec</method>
        </item>
        <item>
            <name>Base64编码</name>
            <type>flow-base64</type>
            <icon>/icons/base64.svg</icon>
            <isBeanEdit>false</isBeanEdit>
            <beanRef>flow-base64Util</beanRef>
            <method>cc.xiaonuo.flow.method.Base64Utils#exec</method>
        </item>
    </component-type>
    <component-type name="system" display-name="高阶组件">
        <item>
            <name>SQL工具</name>
            <type>flow-sql</type>
            <icon>/icons/sql.svg</icon>
        </item>
        <item>
            <name>Groovy脚本</name>
            <type>flow-groovy</type>
            <icon>/icons/groovy.svg</icon>
        </item>
        <item>
            <name>文件上传</name>
            <type>flow-file-upload</type>
            <icon>/icons/file_upload.svg</icon>
            <isBeanEdit>false</isBeanEdit>
            <beanRef>flow-file-upload</beanRef>
            <method>cc.xiaonuo.flow.method.FlowFileUpload#exec</method>
        </item>
        <item>
            <name>HTTP请求</name>
            <type>flow-http</type>
            <icon>/icons/HTTP.svg</icon>
            <isBeanEdit>false</isBeanEdit>
            <beanRef>flow-http</beanRef>
            <method>cc.xiaonuo.flow.method.FlowHttp#exec</method>
        </item>
